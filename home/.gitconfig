# vim: set noexpandtab:

[alias]
	co = checkout
	lg = log --graph --relative-date
	st = status

[color]
	ui = auto

[commit]
	gpgsign = true
	template = /Users/tomoya/.stCommitMsg

[core]
	quotepath = false
	excludesfile = /Users/tomoya/.gitignore_global

[init]
	defaultBranch = main

[log]
	abbrevCommit = true

[pull]
	ff = only

[tag]
	gpgSign = true

[user]
	email = tomoya.y@icloud.com
	name = Tomoya Yoshioka
	signingkey = E3EB51DDA6F415878400B3BB39FB6C28B0AFE917

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[merge]
	tool = vscode

[mergetool]
	prompt = false
	keepBackup = false

[mergetool "vscode"]
	cmd = '/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code' \"$MERGED\"
	trustExitCode = false
